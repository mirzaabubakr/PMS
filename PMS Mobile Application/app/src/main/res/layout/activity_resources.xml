<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/add"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/R_Desc"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_input"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Resource Description"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="#A19E9E"
        app:layout_constraintEnd_toEndOf="@+id/R_spinner"
        app:layout_constraintStart_toStartOf="@+id/R_status"
        app:layout_constraintTop_toBottomOf="@+id/R_status" />

    <Spinner
        android:id="@+id/R_spinner"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:background="@android:drawable/btn_dropdown"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/R_status"
        app:layout_constraintEnd_toEndOf="@+id/R_Type"
        app:layout_constraintStart_toEndOf="@+id/R_status"
        app:layout_constraintTop_toTopOf="@+id/R_status" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:textColor="#FBFBFB"
        android:textStyle="bold"
        android:layout_height="0dp"
        android:layout_marginTop="70dp"
        android:text="Resouces Application"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/R_name"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/custom_input"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Resource Name"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="#A19E9E"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/R_Type"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_input"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Resource Type"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="#A19E9E"
        app:layout_constraintEnd_toEndOf="@+id/R_name"
        app:layout_constraintStart_toStartOf="@+id/R_name"
        app:layout_constraintTop_toBottomOf="@+id/R_name" />

    <TextView
        android:id="@+id/R_status"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_input"
        android:drawablePadding="12dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Resource Status"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="#A19E9E"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/R_Type"
        app:layout_constraintTop_toBottomOf="@+id/R_Type" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_input"
        android:drawablePadding="12dp"
        android:ems="10"
        android:gravity="center"
        android:textColor="#FBFBFB"
        android:textStyle="bold"
        android:hint="VIEW ALL RESOURCES"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/R_addBtn" />

    <ImageButton
        android:id="@+id/RdbView"
        android:layout_width="55dp"
        android:layout_height="45dp"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="192dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@android:drawable/sym_contact_card" />

    <Button
        android:id="@+id/R_addBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Add Resource"
        app:layout_constraintEnd_toEndOf="@+id/R_Desc"
        app:layout_constraintStart_toStartOf="@+id/R_Desc"
        app:layout_constraintTop_toBottomOf="@+id/R_Desc" />

</androidx.constraintlayout.widget.ConstraintLayout>